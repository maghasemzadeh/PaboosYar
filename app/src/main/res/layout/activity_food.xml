<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity"
    android:background="@drawable/menu_background"
    android:paddingRight="@dimen/side_padding"
    android:paddingLeft="@dimen/side_padding"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/activity_food_sadat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="@string/sadat"
        android:textSize="@dimen/default_text_size"
        android:onClick="showSadatFood"/>



    <Button
        android:id="@+id/activity_food_shohada_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/button_background"
        android:text="@string/shohada"
        android:textSize="@dimen/default_text_size"
        android:onClick="showShohadaFood" />

    <Button
        android:id="@+id/activity_food_return_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/logout_background_button"
        android:text="@string/back"
        android:textSize="@dimen/default_text_size"
        android:onClick="back"
        android:textColor="@color/black"/>





</LinearLayout>