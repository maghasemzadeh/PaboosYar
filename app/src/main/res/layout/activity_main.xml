<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/paboos_blue">

    <Button
        android:id="@+id/activity_main_food_button"
        android:layout_width="@dimen/default_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_activity_top_margin"
        android:layout_marginEnd="@dimen/right_margin"
        android:background="@color/paboos_dark_blue"
        android:text="@string/food"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/activity_main_cultural_button"
        android:layout_width="@dimen/default_width"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main_food_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/right_margin"
        android:background="@color/paboos_dark_blue"
        android:text="@string/cultural"
        android:textSize="@dimen/default_text_size"/>

    <Button
        android:id="@+id/activity_main_recreational_button"
        android:layout_width="@dimen/default_width"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main_cultural_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/right_margin"
        android:background="@color/paboos_dark_blue"
        android:text="@string/recreational"
        android:textSize="@dimen/default_text_size"/>



    <Button
        android:id="@+id/activity_main_train_button"
        android:layout_width="@dimen/default_width"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main_recreational_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/right_margin"
        android:background="@color/paboos_dark_blue"
        android:text="@string/train"
        android:textSize="@dimen/default_text_size"/>


    <Button
        android:id="@+id/activity_main_blanket_button"
        android:layout_width="@dimen/default_width"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main_train_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/right_margin"
        android:background="@color/paboos_dark_blue"
        android:text="@string/blanket"
        android:textSize="@dimen/default_text_size"/>


    <Button
        android:id="@+id/activity_main_Entity_button"
        android:layout_width="@dimen/default_width"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main_blanket_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/right_margin"
        android:background="@color/paboos_dark_blue"
        android:text="@string/entity"
        android:textSize="@dimen/default_text_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>