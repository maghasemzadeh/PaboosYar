<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecreationalActivity"
    android:background="@color/paboos_blue"
    android:orientation="vertical"
    android:paddingRight="@dimen/side_padding"
    android:paddingLeft="@dimen/side_padding"
    android:gravity="center">

    <Button
        android:id="@+id/activity_main_pool_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="@string/blue_waves_pool"
        android:textSize="@dimen/default_text_size"
        android:onClick="showPool"/>


    <Button
        android:id="@+id/activity_main_paintball_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/button_background"
        android:text="@string/paintball"
        android:textSize="@dimen/default_text_size"
        android:onClick="showPaintball"/>

    <Button
        android:id="@+id/activity_main_bowling_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/button_background"
        android:text="@string/bowling"
        android:textSize="@dimen/default_text_size"
        android:onClick="showBowling"/>


    <Button
        android:id="@+id/activity_main_futsal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/button_background"
        android:text="@string/futsal"
        android:textSize="@dimen/default_text_size"
        android:onClick="showFutsal" />

    <Button
        android:id="@+id/activity_food_return_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:background="@drawable/logout_backgroun_button"
        android:text="@string/back"
        android:textSize="@dimen/default_text_size"
        android:onClick="back" />



</LinearLayout>